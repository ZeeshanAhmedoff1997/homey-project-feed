<div class="flex items-center justify-center min-h-screen w-full">
  <div class="card w-full max-w-md bg-white shadow-2xl p-8">
    <h2 class="text-center text-3xl font-bold text-gray-800 mb-4">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <!-- Email Field -->
      <div class="form-control">
        <label class="label">
          <span class="label-text">Email</span>
        </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        <% if resource.errors[:email].any? %>
          <p class="text-error text-sm mt-1"><%= resource.errors[:email].first %></p>
        <% end %>
      </div>

      <!-- Password Field -->
      <div class="form-control">
        <label class="label">
          <span class="label-text">Password</span>
        </label>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
        <% if resource.errors[:password].any? %>
          <p class="text-error text-sm mt-1"><%= resource.errors[:password].first %></p>
        <% end %>
      </div>

      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="form-control">
          <label class="cursor-pointer flex items-center space-x-2">
            <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
            <span class="label-text">Remember Me</span>
          </label>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="mt-4">
        <%= f.submit "Log In", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <!-- Sign Up Link -->
    <div class="mt-4 text-center">
      <p class="text-sm">Don't have an account?</p>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary w-full mt-2 hover:text-primary hover:border-primary hover:bg-white" %>
    </div>
  </div>
</div>
