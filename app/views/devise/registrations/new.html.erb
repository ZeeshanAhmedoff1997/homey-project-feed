<div class="flex items-center justify-center min-h-screen w-full">
  <div class="card w-full max-w-md bg-white shadow-2xl p-8">
    <h2 class="text-center text-3xl font-bold text-gray-800 mb-4">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <!-- Email Field -->
      <div class="form-control">
        <label class="label">
          <span class="label-text">Email</span>
        </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        <% if resource.errors[:email].any? %>
          <p class="text-error text-sm mt-1"><%= resource.errors[:email].first %></p>
        <% end %>
      </div>

      <!-- Password Field -->
      <div class="form-control">
        <label class="label">
          <span class="label-text">Password</span>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
        </label>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
        <% if resource.errors[:password].any? %>
          <p class="text-error text-sm mt-1"><%= resource.errors[:password].first %></p>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="form-control">
        <label class="label">
          <span class="label-text">Confirm Password</span>
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
        <% if resource.errors[:password_confirmation].any? %>
          <p class="text-error text-sm mt-1"><%= resource.errors[:password_confirmation].first %></p>
        <% end %>
      </div>

      <!-- Submit Button -->
      <div class="mt-4">
        <%= f.submit "Sign Up", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <!-- Back to Login Button -->
    <div class="mt-4 text-center">
      <%= link_to "Back to Login", new_user_session_path, class: "btn btn-secondary w-full text-white hover:text-primary hover:border-primary hover:bg-white" %>
    </div>
  </div>
</div>
