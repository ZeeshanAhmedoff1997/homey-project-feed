<div class="container mx-auto p-6">
  <%= turbo_stream_from @project %>

  <h1 class="text-3xl font-bold mb-4"><%= @project.name %></h1>
  <p class="text-gray-600"><%= @project.description %></p>

  <div id="project_status">
    <%= render "projects/status", project: @project %>
  </div>
  <h2 class="text-2xl font-semibold mt-8 mb-4">Members</h2>
  <%= render Projects::MembersComponent.new(project: @project, current_user: current_user) %>

  <h2 class="text-2xl font-semibold mt-8 mb-4">Project Feed</h2>
  <%= render Projects::ProjectFeeds::FeedComponent.new(project: @project) %>
</div>
