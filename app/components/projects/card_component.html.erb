<div class="card bg-base-100 shadow-lg border border-gray-200 mt-4">
  <div class="card-body p-4">
    <h2 class="card-title text-lg font-bold"><%= @project.name %></h2>
    <p class="text-sm text-gray-600"><%= @project.description.presence || "No description provided" %></p>

    <div class="flex justify-end gap-2 mt-4 space-x-2">
      <%= link_to "View", project_path(@project), class: "btn btn-primary btn-sm" %>

      <% if @owner %>
        <%= link_to "Edit", edit_project_path(@project), class: "btn btn-warning btn-sm" %>
        <button class="btn btn-error btn-sm" onclick="confirmDelete('<%= @project.id %>')">Delete</button>
      <% end %>
    </div>
  </div>
</div>
