<div class="bg-white p-8 rounded-lg shadow-md w-full max-w-2xl mx-auto">
  <h2 class="text-xl font-bold mb-4">
    <%= @project.new_record? ? "Create Project" : "Edit Project" %>
  </h2>

  <%= form_with model: @project, class: "space-y-4" do |f| %>
    
    <!-- Name Field -->
    <div class="form-control">
      <%= f.label :name, "Project Name", class: "label font-semibold" %>
      <%= f.text_field :name, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :description, "Project Description", class: "label font-semibold" %>
      <%= f.text_area :description, class: "textarea input-bordered input textarea-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :status, "Project Status", class: "label font-semibold" %>
      <%= f.select :status, @statuses, { selected: @project.current_state }, class: "select select-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :user_ids, "Add Members", class: "label font-semibold" %>
      <%= f.collection_select :user_ids, @users, :id, :email, { include_hidden: false }, { multiple: true, class: "select select-bordered w-full" } %>
    </div>

    <div class="flex justify-between mt-4 space-x-2">
      <%= link_to "Cancel", projects_path, class: "btn btn-outline" %>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
